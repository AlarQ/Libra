<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="317.0" prefWidth="231.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistrationController">
    <children>
        <Button fx:id="btnAddUser" layoutX="33.0" layoutY="243.0" mnemonicParsing="false"
                onAction="#confirmRegistration" prefHeight="25.0" prefWidth="149.0" text="Add User">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <TextField fx:id="txtLogin" layoutX="14.0" layoutY="41.0" prefHeight="28.0" prefWidth="187.0"
                   promptText="Login"/>
        <TextField fx:id="txtPassword" layoutX="14.0" layoutY="109.0" prefHeight="28.0" prefWidth="187.0"
                   promptText="Password"/>
        <TextField fx:id="txtEmail" layoutX="14.0" layoutY="179.0" prefHeight="28.0" prefWidth="187.0"
                   promptText="Email"/>
        <Label fx:id="lblLogin" layoutX="18.0" layoutY="14.0" text="Set Login">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label fx:id="lblPassword" layoutX="18.0" layoutY="82.0" text="Set Password">
            <font>
                <Font size="72.0"/>
            </font>
        </Label>
        <Label fx:id="lblEmail" layoutX="18.0" layoutY="152.0" text="Add Your Email"/>
    </children>
</AnchorPane>
