<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="background" prefHeight="234.0" prefWidth="284.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.LoginController">
    <children>
        <Label fx:id="isConnected" alignment="CENTER" contentDisplay="CENTER" layoutX="33.0" layoutY="7.0"
               prefHeight="31.0" prefWidth="222.0" stylesheets="@style.css" text="Sign in" textAlignment="CENTER"
               textFill="#fdfcfc" AnchorPane.bottomAnchor="229.0" AnchorPane.topAnchor="5.0">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Label>
        <Button fx:id="btnLogin" alignment="CENTER" layoutX="75.0" layoutY="154.0" mnemonicParsing="false"
                onAction="#loginButtonClicked" prefHeight="31.0" prefWidth="101.0" text="Login" textAlignment="CENTER"
                textFill="WHITE" textOverrun="CENTER_WORD_ELLIPSIS" AnchorPane.leftAnchor="75.0"
                AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="154.0">
            <font>
                <Font name="Arial" size="15.0"/>
            </font>
        </Button>
        <TextField fx:id="txtUserName" layoutX="54.0" layoutY="63.0" promptText="Uder Name"
                   AnchorPane.bottomAnchor="183.8" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                   AnchorPane.topAnchor="50.0">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="txtPassword" layoutY="111.0" promptText="Password" AnchorPane.bottomAnchor="133.8"
                       AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
            <font>
                <Font size="15.0"/>
            </font>
        </PasswordField>
        <Label fx:id="lblRegister" layoutX="32.0" layoutY="231.0" text="Are you new?"/>
        <Button fx:id="btnRegister" alignment="CENTER" layoutX="154.0" layoutY="230.0" mnemonicParsing="false"
                prefHeight="23.0" prefWidth="117.0" text="Create account" textAlignment="CENTER" textFill="WHITE"
                AnchorPane.leftAnchor="154.0" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="230.0">
            <font>
                <Font name="Arial" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="btnRegister1" alignment="CENTER" layoutX="64.0" layoutY="197.0" mnemonicParsing="false"
                text="Forget login or password?" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Arial" size="12.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
